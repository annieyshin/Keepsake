<%= render "layouts/errors", :object => @item %>
<div class="container">
  <div class="formdiv">
    <%= form_for @item do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <hr>
      <%= f.label :description %>
      <%= f.text_field :description %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
